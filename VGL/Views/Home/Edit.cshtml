
@model VideoGame

<br />
<div class="card mb-3">
    <h3 class="card-header">Edit VideoGame</h3>
    <div class="card-body">
        <form asp-controller="Home" asp-action="Edit" method="post">
            <div class="row mb-1">
                <div class="col-2">
                    <label asp-for="Title"></label>
                </div>
                <div class="col">
                    <input asp-for="Title" class="form-control" />
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-2">
                    <label asp-for="Platform"></label>
                </div>
                <div class="col">
                    <input asp-for="Platform" class="form-control" />
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-2">
                    <label asp-for="Genre"></label>
                </div>
                <div class="col">
                    <input asp-for="Genre" class="form-control" />
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-2">
                    <label asp-for="ESRB_Rating"></label>
                </div>
                <div class="col">
                    <select class="form-select" asp-for="ESRB_Rating">
                        <option>E</option>
                        <option>E10+</option>
                        <option>T</option>
                        <option>M</option>
                        <option>A</option>
                        <option>RP</option>
                    </select>
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-2">
                    <label asp-for="Year"></label>
                </div>
                <div class="col">
                    <input asp-for="Year" class="form-control" />
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-2">
                    <label asp-for="Image"></label>
                </div>
                <div class="col">
                    <input asp-for="Image" class="form-control" />
                </div>
            </div>
        </form>
    </div>
</div>